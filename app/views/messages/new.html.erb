<%= form_for :message, url: "/messages" do |f| %>

  <% if @message.errors.any? %>
    <% @message.errors.details.keys.each do |attr| %>
      <div class="alert alert-danger">
        <%= @message.errors.full_messages_for(attr).first %>
      </div>
    <% end %>
  <% end %>
  
  <p>
    <%= f.label :to_email %><br>
    <%= f.text_field :to_email %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>
  
<% end %>
